<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: .8
            opacity: 0
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: .1
            background_normal: "files/normal.png"
            background_down: "files/down.png"
        Button:
            id: capture_button
            text: "Capture"
            on_press: root.capture()
            size_hint_y: .1
            background_normal: "files/normal.png"
            background_down: "files/down.png"

<ImageScreen>
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            source: ''
            size_hint_y: .7
        Button:
            id: share_button
            text: "Create Shareable Link"
            on_press: root.create_link()
            size_hint_y: .1
            background_normal: "files/normal.png"
            background_down: "files/down.png"
        Label:
            id: label
            text: ""
            size_hint_y: .1
        GridLayout:
            cols: 2
            size_hint_y: .1
            Button:
                id: copy_button
                on_press: root.copy_link()
                text: "Copy Link"
                background_normal: "files/normal.png"
                background_down: "files/down.png"
            Button:
                text: "Open Link"
                id: open_button
                on_press: root.open_link()
                background_normal: "files/normal.png"
                background_down: "files/down.png"

<RootWidget>:
    canvas.before:
        Color:
            rgba:(0.2, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen
        id: camera_screen
        name: 'camera_screen'
    ImageScreen
        id: image_screen
        name: 'image_screen'
